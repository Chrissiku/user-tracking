<%= form_with(url: root_path, method: "GET", data: { controller: "form-submission", turbo_frame: "searches", turbo_action: "advance" }) do |form| %>
    <%= form.label :query, "Search here : " %>
    <%= form.text_field :query, data: { action: "input->form-submission#search" } %>
    <%= form.submit "Search", name: nil %>
<% end %>

<%= render "searches", searches: @searches %>